<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kuis">



    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/kuis_hal"/>

    <TextView
        android:id="@+id/textKuis"
        android:layout_below="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="1/10"
        android:textSize="35sp"
        android:textColor="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/pilihan2"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:background="@drawable/ba_pg"
        android:layout_below="@id/textKuis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/ba"
        android:onClick="checkAnswer"
       />

    <ImageButton
        android:id="@+id/pilihan1"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:background="@drawable/alif_pg"
        android:layout_below="@id/textKuis"
        android:layout_toLeftOf="@id/pilihan2"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/alif"
        android:onClick="checkAnswer"
        />

    <ImageButton
        android:id="@+id/pilihan3"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:background="@drawable/ta_pg"
        android:layout_below="@id/textKuis"
        android:layout_toRightOf="@id/pilihan2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="@string/ta"
        android:onClick="checkAnswer"
        />

    <ImageView
        android:id="@+id/satu"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/satux"
        android:layout_below="@id/pilihan2"
        android:layout_alignParentStart="true"
        android:contentDescription="1"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/empat"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/empat"
        android:layout_below="@id/pilihan2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/dua"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/dua"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_below="@id/satu"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/lima"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/lima"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_below="@id/empat"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/tiga"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/tiga"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_below="@id/dua"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/enam"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/enam"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_below="@id/lima"
        android:layout_marginTop="25dp"/>

</RelativeLayout>