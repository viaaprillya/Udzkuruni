<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hal_polahuruf"
    tools:context=".Sin">

    <ImageButton
        android:id="@+id/list_huruf"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/list_huruf"
        android:contentDescription="@string/daftar_huruf"/>

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/previous"
        android:contentDescription="@string/sebelumnya"
        />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/next"
        android:contentDescription="@string/selanjutnya"
        />

    <ImageView
        android:id="@+id/kotak"
        android:layout_width="250dp"
        android:layout_height="173.7dp"
        android:background="@drawable/sinkotak"
        android:layout_below="@id/next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/satu"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/satu"
        android:layout_below="@id/kotak"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/empat"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/empatx"
        android:layout_below="@id/kotak"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/dua"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/duax"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_below="@id/satu"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/lima"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/lima"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_below="@id/empat"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/tiga"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/tigax"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_below="@id/dua"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/enam"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/enam"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:layout_below="@id/lima"
        android:layout_marginTop="25dp" />

</RelativeLayout>